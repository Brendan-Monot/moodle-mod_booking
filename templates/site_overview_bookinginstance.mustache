{{!
    @template mod_booking/site_overview_bookinginstance

    Classes required for JS:
    * none

    Data attributes required for JS:
    * data-region

    Example context (json):
	{
		"url": "https://example.com",
		"bookingname": "Booking Example",
		"options": [
			{
				"name": "Option 1",
				"regularusersexist": true,
				"regular": ["User 1", "User 2"]
			},
			{
				"name": "Option 2",
				"waitinglistusersexist": true,
				"waiting": ["User 3", "User 4"]
			}
		]
	}
}}
<div class="card">
  <div class="card-header">
    <a class="btn" href="{{url}}">{{bookingname}}</a>
  </div>
  {{#options}}
  <div class="card-block">
    <h4 class="card-title">{{{name}}}</h4>
    <div class="card-text">
    	<div class="container">
			  <div class="row">
			    <div class="col-xs-6 span6 col">
			    {{#regularusersexist}}
			    <ul class="list-group">
			    			<li class="list-group-item">{{# str }} booked, mod_booking {{/ str }}</li>
			        	{{#regular}}
			      			<li class="list-group-item">{{{.}}}</li>
			      		{{/regular}}
			    </ul>
			    {{/regularusersexist}}
			    </div>
			    <div class="col-xs-6 span6 col">
			    {{#waitinglistusersexist}}
			    <ul class="list-group">
			    			<li class="list-group-item">{{# str }} waitinglist, mod_booking {{/ str }}</li>
			        	{{#waiting}}
			      			<li class="list-group-item">{{{.}}}</li>
			      		{{/waiting}}
			    </ul>
			    {{/waitinglistusersexist}}
			    </div>
			  </div>
		</div>
    </div>
  </div>
  {{/options}}
</div>
