{{!
    @template mod_booking/bookingoption_description

    Classes required for JS:
    * none

    Data attributes required for JS:
    * data-region
}}

<h4>{{title}}</h4>
{{#address}}<div class="bo_address">{{#str}}address, mod_booking{{/str}}:  {{address}}</div>{{/address}}
{{#location}}<div class="bo_location">{{#str}}location, mod_booking{{/str}}: {{location}}</div>{{/location}}
{{#institution}}<div class="bo_institution">{{#str}}institution, mod_booking{{/str}}: {{institution}}</div>{{/institution}}
{{#statusdescription}}<div class="bo_description"><p>{{{statusdescription}}}</p></div>{{/statusdescription}}
{{#description}}<div class="bo_description"><p>{{{description}}}</p></div>{{/description}}
{{#dates}}
    <p>
        <div>
            {{{datestring}}}
        </div>
        <div class="list-group">
        {{#customfields}}
            <div class="list-group-item">
                {{name}}{{{value}}}
            </div>
        {{/customfields}}
        </div>
    </p>
{{/dates}}
