{{!
    @template mod_booking/col_text_modal

    Classes required for JS:
    * none

    Data attributes required for JS:
    * data-region
}}

<div class="d-flex justify-content-between align-items-end">
  <a href="{{url}}" target="_blank"><h3>{{title}}</h3></a>
  {{#editoptionurl}}
  <div id="coltextlink-dropdown" class="dropdown">
    <button class="btn btn-light dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      <i class="fa fa-gear"></i>
    </button>
    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
        <a class="dropdown-item" href="{{editoptionurl}}" target="_self">
          <i class="fa fa-edit"></i> {{#str}} updatebooking, mod_booking {{/str}}
        </a>
        <a class="dropdown-item" href="{{editteachersurl}}" target="_self">
          <i class="fa fa-users"></i> {{#str}} editteacherslink, mod_booking {{/str}}
        </a>
        {{#optiondatesteachersurl}}
        <h6 class="dropdown-header">{{#str}} reports {{/str}}</h6>
        <a class="dropdown-item" href="{{optiondatesteachersurl}}" target="_self">
          <i class="fa fa-table"></i> {{#str}} optiondatesteachersreport, mod_booking {{/str}}
        </a>
        {{/optiondatesteachersurl}}
    </div>
  </div>
  {{/editoptionurl}}
</div>
