{{!
    @template mod_booking/bookingoption_description

    Classes required for JS:
    * none

    Data attributes required for JS:
    * data-region
}}


<div class="container-fluid">
    <div class="row">
        <div class="col-md-7">
            <h2 class="title" >{{#titleprefix}}{{.}} - {{/titleprefix}}{{title}}</h2>
            {{#invisible}}
                <div class="booking-option-info-invisible">{{#str}} invisibleoption, mod_booking {{/str}}</div>
            {{/invisible}}
            <h6 class="h6-category">
                {{sport}}
            </h6>
            {{#description}}<div class="content"><p>{{{.}}}</p></div>{{/description}}
            {{> mod_booking/bookingoption_description_teachers }}
            <a class="collapseoptiondatesbutton" data-toggle="collapse" href="#collapseoptiondates" role="button" aria-expanded="false" aria-controls="collapseOptiondates">
                {{#str}} showdates, mod_booking {{/str}}
            </a>
            <div id="collapseoptiondates" class="collapse list-group-item">
            <div class="list-group">
                {{#dates}}
                    <div class="list-group-item">
                        <div>
                            <b>{{{datestring}}}</b>
                        </div>
                        <div {{^customfields}}style="display:none"{{/customfields}}>
                            <ul>
                                {{#customfields}}
                                    <li>
                                        {{name}}{{{value}}}
                                    </li>
                                {{/customfields}}
                            </ul>
                        </div>
                    </div>
                {{/dates}}
            </div>
            </div>
        </div>
        <div class="col-md-5">
            <div class="card price-card">
              <img class="w-100" src="{{imageurl}}">
              {{{ bookitsection }}}
              <div class="card-body">
                <ul class="infolist" style="list-style: none;">
                    {{#dayofweektime}}
                    <li>
                        <span>
                            <i class="fa fa-fw fa-clock-o" aria-hidden="true"></i>
                        </span>
                        <span class="d-md-none">
                            {{#str}} dayofweektime, mod_booking {{/str}}
                        </span>
                            {{.}}
                        <span>
                            {{#unitstring}} ({{.}}) {{/unitstring}}
                        </span>
                    </li>
                    {{/dayofweektime}}
                    {{#location}}
                    <li>
                        <span>
                            <i class="fa fa-fw fa-map-marker" aria-hidden="true"></i>
                        </span>
                        <span class="d-md-none">
                            {{#str}} location, mod_booking {{/str}}
                        </span>
                        <span>
                            {{{.}}}
                        </span>
                    </li>
                    {{/location}}
                    {{#institution}}
                    <li>
                        <span>
                            <i class="fa fa-fw fa-building-o" aria-hidden="true"></i>
                        </span>
                        <span class="d-md-none">
                            {{#str}} institution, mod_booking {{/str}}
                        </span>
                        <span>
                            {{{.}}}
                        </span>
                    </li>
                    {{/institution}}
                    {{#bookinginformation}}
                    <li>
                        <div class="col-ap-availableplaces">
                            <span><i class="fa fa-fw fa-users" aria-hidden="true"></i></span>
                            {{> booking/col_availableplaces }}
                        </div>
                    </li>
                    {{#minanswers}}
                    <li>
                        <div class="col-ap-minanswers">
                            <span><i class="fa fa-fw fa-arrow-up" aria-hidden="true"></i></span>
                            {{#str}} minanswers, mod_booking {{/str}}: {{.}}
                        </div>
                    </li>
                    {{/minanswers}}
                    {{/bookinginformation}}
                </ul>
              </div>
            </div>
        </div>
    </div>
</div>

{{#js}}
    require(['local_shopping_cart/cart'], function(cart) {
    cart.buttoninit({{modalcounter}}, "mod_booking");
    });
{{/js}}