{{!
    @template mod_booking/semesters_holidays

    Classes required for JS:
    * none

    Data attributes required for JS:
    * data-region
}}
<ul class="nav nav-tabs mb-3" id="nav-tabs-booking-options-view" role="tablist">
  <li class="nav-item" role="presentation">
    <button class="nav-link active" id="all-options-tab" data-toggle="pill" data-target="#all-options"
      type="button" role="tab" aria-controls="all-options" aria-selected="true">
      {{#str}} showallbookingoptions, mod_booking {{/str}}
    </button>
  </li>
  <li class="nav-item" role="presentation">
    <button class="nav-link" id="my-options-tab" data-toggle="pill" data-target="#my-options"
      type="button" role="tab" aria-controls="my-options" aria-selected="true">
      {{#str}} showmybookingsonly, mod_booking {{/str}}
    </button>
  </li>
</ul>
<div class="tab-content" id="pills-tabContent">
  <div class="tab-pane fade show active" id="all-options" role="tabpanel" aria-labelledby="all-options-tab">{{{alloptionstable}}}</div>
  <div class="tab-pane fade" id="my-options" role="tabpanel" aria-labelledby="my-options-tab">{{{myoptionstable}}}</div>
</div>
