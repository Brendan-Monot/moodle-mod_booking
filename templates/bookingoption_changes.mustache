{{!
    @template mod_booking/bookingoption_changes

    Classes required for JS:
    * none

    Data attributes required for JS:
    * data-region
}}

<table border="0">
    {{#changes}}
        <tr>
            {{#fieldname}}
                <td><b>{{fieldname}}: </b></td>
                <td style="color: red;"><s>{{oldvalue}}</s></td>
                <td>{{newvalue}}</td>
            {{/fieldname}}
            <!-- Custom fields have no field name. -->
            {{^fieldname}}
                <td>{{#newname}}<b>{{newname}}</b> {{/newname}}{{#oldname}}<s style="color: red;">{{oldname}}</s>{{/oldname}}</td>
                <td style="color: red;">{{#oldvalue}}<s>{{oldvalue}}</s>{{/oldvalue}}</td>
                <td>{{#newvalue}}{{newvalue}}{{/newvalue}}</td>
            {{/fieldname}}
        </tr>
    {{/changes}}
</table>