{{!
    @template mod_booking/col_availableplaces

    Classes required for JS:
    * none

    Example context (json):
    {
        "todo" : "todo"
    }
}}

{{#showmanageresponses}}<a href="{{{manageresponsesurl}}}" style="text-decoration: none;">{{/showmanageresponses}}
{{#iambooked}}
    {{#maxanswers}}
        <span class="col-ap-availableplaces">
            {{#fullybooked}}
                <span class="text-danger font-weight-bold">{{booked}}</span>
            {{/fullybooked}}
            {{^fullybooked}}
                <span class="text-success font-weight-bold">{{booked}}</span>
            {{/fullybooked}}
             / {{maxanswers}}
        </span>
    {{/maxanswers}}
    {{^maxanswers}}
        <span class="text-success font-weight-bold">{{booked}}</span>
             / {{#str}} unlimitedplaces, mod_booking {{/str}}
    {{/maxanswers}}
    {{#maxoverbooking}}
        <span class="col-ap-waitingplacesavailable">
            ({{#str}} waitinglist, mod_booking {{/str}}: {{waiting}}/{{maxoverbooking}})
        </span>
    {{/maxoverbooking}}
{{/iambooked}}

{{#onwaitinglist}}
